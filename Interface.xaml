                                    <DataErrorValidationRule/>
                                </Binding.ValidationRules>
                            </Binding>
                        </TextBox.Text>
                    </TextBox>
                    <TextBox x:Name="txt_clinica" Style="{StaticResource TextBoxCapturaError}"   Width="200" Height="30" Canvas.Left="90" Canvas.Top="152"  >
