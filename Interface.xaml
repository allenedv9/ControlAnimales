<Window x:Class="ControlAnimales.Interface"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ControlAnimales"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <Grid Margin="0,0,0,369">
        <ToolBar Background="#FF9E8682" >
            <Button x:Name="añadir_mascota" Height="48" Width="96" Content="Añadir mascota" Background="White" Click="añadir_mascota_Click"/>
            <Separator Width="3"/>                  
            <Button x:Name="diario" Height="48" Width="96" Content="Añadir mascota" Background="White" Click="diario_Click"/>
            <Separator Width="3"/>
            <Button x:Name="galeria" Height="48" Width="96" Content="Galeria" Background="White" Click="galeria_Click"/>
            <Separator Width="3"/>
            <Image Width="172" />
        </ToolBar>

        <Canvas x:Name="img_principal">
            <Image x:Name="img_princ" Source="/imagenes/pug.jpg" Height="444" Width="800" Canvas.Top="33" Canvas.Left="2"/>
        </Canvas>
        <TabControl x:Name="agregarMasc" Margin="0,65,0,-364" Visibility="Hidden">
            <TabItem Header="TabItem" Margin="-2,-2,-2,2">
                <Canvas x:Name="ventana" Visibility="Hidden" Background="#FFE5E5E5" Margin="2,39,-2,12">
                    <Label Content="Label" Canvas.Left="22" Canvas.Top="10"/>
                    <Label Content="Label" Canvas.Left="22" Canvas.Top="41"/>
                    <Label Content="Label" Canvas.Left="22" Canvas.Top="67"/>
                    <Label Content="Label" Canvas.Left="22" Canvas.Top="93"/>
                    <Label Content="Label" Canvas.Left="22" Canvas.Top="125" RenderTransformOrigin="0.658,4.626"/>

                </Canvas>
            </TabItem>
            <TabItem Header="TabItem">
                <Canvas Background="#FFE5E5E5" Margin="2,39,-2,12">



                </Canvas>
            </TabItem>
        </TabControl>



    </Grid>
</Window>